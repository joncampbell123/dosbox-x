all: $(TARGET) $(SDLMAIN)

$(TARGET):	$(OBJS) $(OBJS2) $(OBJS3) $(OBJS4)
	$(LD) $(LFLAGS) -OUT:$@ $(OBJS) $(OBJS2) $(OBJS3) $(OBJS4) $(LIBS)

.c.obj:
	$(CC) $(CFLAGS) -c -Fo$@ $<

.cpp.obj:
	$(CXX) $(CXXFLAGS) -c -Fo$@ $<

.rc.res:
	$(WINDRES) -fo $@ $<

clean:
	del $(TARGET) $(OBJS)
	del $(OBJS2)
	del $(OBJS3)
	del $(OBJS4)
	del *.lib *.exp
